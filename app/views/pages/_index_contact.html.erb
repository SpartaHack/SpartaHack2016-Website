<section id="contact">
  <%= form_tag("/contact", method: "post", id: "send_contact") do %>
    <div class="wrap column">
      <h1>MAILING LIST</h1>
      
      <div class="inner">
        <%= text_field_tag 'firstName', nil, placeholder: 'FIRST NAME'%>
        <%= text_field_tag 'lastName', nil, placeholder: 'LAST NAME'%>                
      </div>

      <%= email_field_tag 'email', nil, placeholder: 'YOUR EMAIL'%>
    </div>
    <!-- <div>
      <= text_area_tag 'message', nil, placeholder: 'YOUR MESSAGE (OPTIONAL)'%>
    </div>-->
    <div class="hvr-bounce-to-right">
      <%= submit_tag "SEND  >" %>
    </div>
    
  <% end %>
</section>