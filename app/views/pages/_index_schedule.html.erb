<section id="schedule">
  <div id="schedule-wrap">
    <h2 class="section-head">
        SCHEDULE
    </h2>

    <div id="schedule-col-wrap">
    <% @schedule.each do |day|  %>
      <% if !day[2].blank? %>
        <div class="schedule-col">
            <div class="weekday" ><%=  "#{day[0]} #{day[1]}" %></div>
          <div class="event-wrap">
            <table id="cap-table">
              <colgroup>
                 <col span="1" >
                 <col span="1" >
              </colgroup>
            <% day[2].each do |event| %>
              <tr>
                <td class="event-time"><%= event[0][1].blank? ? event[0][0] : "#{event[0][0]} - #{event[0][1]}" %></td>
                <td class="event"><%= event[1] %></td>
              </tr>
            <% end %>
          </table>
          </div>
        </div>
      <% end %>
    <% end %>

    </div>
  </div>

</section>
