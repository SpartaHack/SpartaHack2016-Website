<section id="hero">
	<div class="wrap">

	 	 <div id="logo-wrap">
			<h2 class="section-head title"><%= image_tag "sparathack2016.svg", alt: "SpartaHack", :class => "title-text" %></h2>
			<p id="title-desc">Michigan State University’s official hackathon</p>
			<p id="title-date">February 26-28, 2016</p>
			<p id="title-hashtag">#livebythecode</p>
			<%= image_tag "logo.svg", alt: "SpartaHack", :class => "logo" %>

			<div id="contact" style="border:none">
				<%= form_tag("/subscribe", method: "post", id: "send_contact", :remote => true, :authenticity_token => true) do %>
				  <div class="wrap column">
				    <h1 id="mail">SpartaHack 2017 MAILING LIST SIGNUP</h1>
				    <% if flash[:error] %>
				      <div id="error-wrapper">
				        <div class="error"><%= flash[:error] %></div>
				      </div>
				    <% end %>
				    <div class="inner">
				      <%= label_tag 'fname', 'First Name', class: 'no-label' %>
				      <%= text_field_tag 'fname', "#{flash[:fname] if flash[:fname]}", placeholder: 'FIRST NAME', required: true%>
				      <%= label_tag 'lname', 'Last Name', class: 'no-label' %>
				      <%= text_field_tag 'lname', "#{flash[:lname] if flash[:lname]}", placeholder: 'LAST NAME', required: true%>
				    </div>

				    <%= label_tag 'emailinput', 'Email', class: 'no-label' %>
				    <%= email_field_tag 'emailinput', "#{flash[:email] if flash[:email]}", placeholder: 'YOUR EMAIL',  :class => "tail", required: true%>

				    <div class="hvr-underline-from-center inner" id="submit-wrap">
				      <%= submit_tag "SIGN UP TO BE NOTIFIED", id: "send-message"%>
				    </div>
				  </div>

				<% end %>
			</div>

			<p id="intro">
			  SpartaHack 2016 was Michigan State University’s second annual student-run hackathon. On the weekend of February 26th, we brought together 500+ students of all skill levels and disciplines to get creative with tech, connect with peers and professionals, and forget the words "I can't."
			</p>
