<% if !@attendance.blank? %>
		$("#popup").html("User already in attendance.");
		$("#popup-wrapper").fadeIn("fast");
<% else %>
	<% if @user_object || @user %>
		$("#checkin-search-wrap").fadeOut("slow", function() {
			$("#attendee-name").html("<%= @user['user']['firstName'].capitalize + ' ' + @user['user']['lastName'].capitalize %>");
			$("#attendee-email").html("<%= @user['user']['email'] %>");
			$("#attendee-tshirt").html("<%= @user['tshirt'] %>");
			$("#attendee-diet").html("<%= @user['restrictions'].join(', ') %>");
			$("#attendee-other-diet").html("<%= @user['otherRestrictions'] %>");
			$("#attendee-minor").html("<%= @minor == true ? 'Yes' : '' %>");
			$("#attendee-university").html("<%= @user['application']['universityStudent'] == 'false' ? 'High School' : @user['application']['university'].split(':')[-1] %>");
			$("#attendee-checkin").attr("value", "<%= @user['user']['objectId'] %>");
			$("#attendee").fadeIn("fast");
		});
	<% else %>
		$("#popup").html("No user found.");
		$("#popup-wrapper").fadeIn("fast");
	<% end %>
<% end %>